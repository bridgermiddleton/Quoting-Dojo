@model Quote;
<div class="container">
    <h1 class="display-2 text-center">Welcome to QuotingDojo</h1>
    <form class="form-group" asp-action="AddQuote" asp-controller="Home" method="POST">
        <span asp-validation-for="Name"></span>
        Your Name:<input class="form-control" asp-for="Name">

        <span asp-validation-for="TheQuote"></span>
        Your quote:<input class="form-control" asp-for="TheQuote">

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Add my quote!</button>
            <a class="btn btn-success" href="/quotes">Skip to quotes!</a>
        </div>
    </form>
</div>